{
  "name": "blog-editor",
  "version": "0.1.1",
  "description": "Topotalブログ記事編集アプリ",
  "main": "index.js",
  "scripts": {
    "start": "npm run build & npm run lite & npm run watch",
    "lite": "lite-server",
    "build": "npm run build:sass & npm run build:js",
    "build:js": "NODE_ENV=development browserify src/js/App.js -t babelify -t envify --outfile public/js/bundle.js -d",
    "build:sass": "node-sass src/sass --output public/css",
    "watch": "npm run watch:sass & NODE_ENV=development npm run watch:js",
    "watch:js": "watch 'npm run build:js' src/js/ --ignoreDotFiles",
    "watch:sass": "node-sass src/sass --output public/css -w",
    "test": "jest src/js/",
    "postinstall": "npm run build",
    "production-build": "npm run build:sass && npm run production-build:js",
    "production-build:js": "NODE_ENV=production browserify src/js/App.js -t babelify -t envify --outfile public/js/bundle.js",
    "pack": "npm run production-build && build --dir",
    "dist": "npm run production-build && build"
  },
  "author": "Takayoshi Sawada",
  "homepage": "https://topotal.com",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babelify": "^7.3.0",
    "brace": "^0.9.1",
    "browserify": "^11.2.0",
    "classnames": "^2.2.5",
    "electron-builder": "^13.11.1",
    "envify": "^4.0.0",
    "enzyme": "^2.7.1",
    "highlight.js": "^9.10.0",
    "jest": "^16.0.2",
    "lite-server": "^2.3.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "mousetrap": "^1.6.0",
    "node-sass": "^3.13.1",
    "notie": "^4.3.0",
    "nprogress": "^0.2.0",
    "react": "^15.4.2",
    "react-ace": "^4.1.6",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-html-parser": "^1.0.3",
    "split.js": "^1.2.0",
    "superagent": "^2.3.0",
    "watch": "^1.0.2"
  },
  "build": {
    "appId": "com.topotal.blog-editor",
    "electronVersion": "1.4.10"
  }
}
